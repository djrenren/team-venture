<Window x:Class="MedicalImager.WindowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowDialog" Height="200" Width="200">
    <Grid>
        <StackPanel>
            <Label>Min:</Label>
            <TextBox x:Name="MinVal" HorizontalAlignment="Center" MaxLength="3" Height="23"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label>Max:</Label>
            <TextBox x:Name="MaxVal"  HorizontalAlignment="Center" MaxLength="3" Height="23"  TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

            <!-- Accept or Cancel -->
            <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4">
                <Button Name="okButton" Click="okButton_Click" IsDefault="True">OK</Button>
                <Button Name="cancelButton" IsCancel="True">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
